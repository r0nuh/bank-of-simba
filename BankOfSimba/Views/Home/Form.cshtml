@model BankOfSimba.Models.Client
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <title>Form</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            <h1>Add Account</h1>
        </div>
        <div class="container col-md-offset-3">
            <form action="/add" method="post">
                <div class="form-group">
                    <label class="col-sm-1 control-label">Name</label>
                    <input type="text" name="name"><br>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Balance</label>
                    <input type="text" name="balance">€coin<br />
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Animal</label>
                    <input type="text" name="animal"><br>
                </div>
                <div class="checkbox col-md-push-1">
                    <label>
                        <input type="checkbox" name="king" value="true">Is King
                    </label>
                </div>
                <button type="submit" class="btn btn-default col-md-1">Submit</button>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>